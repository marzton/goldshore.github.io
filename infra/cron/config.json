{
  "poll_interval_minutes": 15,
  "auto_open_fix_pr": true,
  "auto_comment_on_incidents": true,
  "max_parallel_checks": 6,
  "github": {
    "org": "goldshore",
    "repos": ["goldshore"],
    "branch_protection": {
      "required_approving_review_count": 1,
      "dismiss_stale_reviews": true,
      "require_status_checks": true,
      "enforce_admins": true
    }
  },
  "cloudflare": {
    "account_id_env": "CF_ACCOUNT_ID",
    "zone_id_env": "CF_ZONE_ID",
    "checks": [
      { "type": "pages_build_status", "project": "goldshore-web" },
      { "type": "pages_build_status", "project": "goldshore-monorepo" },
      {
        "type": "pages_domain_recovery",
        "targets": [
          {
            "project": "goldshore-web",
            "host": "https://goldshore.org",
            "domains": ["goldshore.org", "www.goldshore.org"]
          },
          {
            "project": "goldshore-web",
            "host": "https://www.goldshore.org",
            "domains": ["www.goldshore.org"]
          },
          {
            "project": "goldshore-monorepo",
            "host": "https://admin.goldshore.org",
            "domains": ["admin.goldshore.org"]
          }
        ]
      },
      { "type": "worker_health", "script": "goldshore-api-worker", "path": "/v1/health" },
      {
        "type": "dns_records",
        "required": [
          { "name": "goldshore.org", "type": "CNAME" },
          { "name": "api.goldshore.org", "type": "CNAME" },
          { "name": "admin.goldshore.org", "type": "CNAME" },
          { "name": "api-preview.goldshore.org", "type": "CNAME" },
          { "name": "api-dev.goldshore.org", "type": "CNAME" },
          { "name": "_dmarc.goldshore.org", "type": "TXT", "contains": "v=DMARC1; p=reject" },
          { "name": "goldshore.org", "type": "TXT", "contains": "v=spf1" }
        ]
      }
    ]
  },
  "ai_agent": {
    "notify_webhook_env": "AGENT_WEBHOOK_URL",
    "label_prefix": "agent:",
    "triage_labels": ["agent:triage", "ops", "infra"]
  },
  "rules": {
    "open_conflicts": { "auto_fix_strategy": "rebase-onto-main", "open_pr_comment": true },
    "pages_output_dirs": [
      { "repo": "goldshore-admin", "path": "apps/admin/dist" },
      { "repo": "goldshore-web", "path": "apps/web/dist" }
    ],
    "sensitive": {
      "disallow_plaintext_secrets": true,
      "required_secrets": ["GH_TOKEN", "CF_API_TOKEN", "CF_ACCOUNT_ID", "CF_ZONE_ID"]
    }
  }
}
