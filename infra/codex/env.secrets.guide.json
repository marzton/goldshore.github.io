{
  "meta": {
    "project": "goldshore-github-io",
    "version": "1.0.0",
    "description": "Generation and source instructions for empty values in env.secrets.bundle.json"
  },
  "global": {},
  "cloudflare": {
    "CLOUDFLARE_ACCOUNT_ID": {
      "source": "Cloudflare Dashboard",
      "path": "My Profile → Account ID (or Workers & Pages → Overview)",
      "url": "https://dash.cloudflare.com",
      "notes": "Static per account."
    },
    "CLOUDFLARE_API_TOKEN": {
      "source": "Cloudflare Dashboard",
      "path": "My Profile → API Tokens → Create Token (Workers/Pages/DNS scopes)",
      "url": "https://dash.cloudflare.com/profile/api-tokens",
      "notes": "Grant: Workers Scripts:Edit, Pages:Edit, Zone:DNS:Edit if you will manage DNS."
    }
  },
  "wrangler_bindings": {
    "kv.CONFIG_KV.id": {
      "source": "Cloudflare Dashboard or Wrangler CLI",
      "path": "Workers → KV → Create namespace",
      "url": "https://dash.cloudflare.com",
      "cli_example": "wrangler kv:namespace create CONFIG_KV --env production",
      "notes": "Use the returned namespace ID."
    },
    "kv.SESSIONS_KV.id": {
      "source": "Cloudflare Dashboard or Wrangler CLI",
      "path": "Workers → KV → Create namespace",
      "cli_example": "wrangler kv:namespace create SESSIONS_KV --env production"
    },
    "d1.DB.database_id": {
      "source": "Cloudflare Dashboard or Wrangler CLI",
      "path": "Workers → D1 → Create database",
      "cli_example": "wrangler d1 create goldshore-db"
    },
    "r2.ASSETS_BUCKET.bucket_name": {
      "source": "Cloudflare Dashboard or Wrangler CLI",
      "path": "R2 → Create bucket",
      "cli_example": "wrangler r2 bucket create goldshore-assets",
      "notes": "Use the exact bucket name you created."
    },
    "queues.TASKS_QUEUE.queue": {
      "source": "Cloudflare Dashboard or Wrangler CLI",
      "path": "Queues → Create queue",
      "cli_example": "wrangler queues create goldshore-tasks"
    }
  },
  "api": {},
  "observability": {
    "SENTRY_DSN": {
      "source": "Sentry",
      "path": "Projects → Create project → Project Settings → Client Keys (DSN)",
      "url": "https://sentry.io"
    },
    "POSTHOG_KEY": {
      "source": "PostHog",
      "path": "Project settings → Project API Key",
      "url": "https://app.posthog.com"
    },
    "GA_MEASUREMENT_ID": {
      "source": "Google Analytics 4",
      "path": "Admin → Data streams → Web → Measurement ID (G-XXXX)",
      "url": "https://analytics.google.com"
    },
    "OTEL_EXPORTER_OTLP_ENDPOINT": {
      "source": "Your APM/Observability vendor",
      "examples": [
        "https://otlp.nr-data.net (New Relic)",
        "https://ingest.lightstep.com:443 (Lightstep)",
        "http(s)://<your-otel-collector>:4317"
      ]
    }
  },
  "security": {
    "SESSION_SECRET": {
      "source": "Local generation",
      "cli_examples": [
        "node -e \"console.log(require('crypto').randomBytes(48).toString('base64url'))\"",
        "openssl rand -base64 48 | tr '+/' '-_' | tr -d '='"
      ],
      "notes": "Aim for ≥ 48 bytes before encoding."
    },
    "HMAC_SECRET": {
      "source": "Local generation",
      "cli_examples": [
        "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
        "openssl rand -hex 32"
      ]
    }
  },
  "payments": {
    "STRIPE_SECRET_KEY": {
      "source": "Stripe Dashboard",
      "path": "Developers → API keys → Secret key",
      "url": "https://dashboard.stripe.com/apikeys",
      "notes": "Starts with 'sk_live_' for production."
    },
    "STRIPE_WEBHOOK_SECRET": {
      "source": "Stripe CLI or Dashboard",
      "path": "Developers → Webhooks → Your endpoint → Signing secret",
      "url": "https://dashboard.stripe.com/webhooks",
      "cli_example": "stripe listen --forward-to localhost:8787/stripe/webhook"
    },
    "PAYPAL_CLIENT_ID": {
      "source": "PayPal Developer",
      "path": "Dashboard → My Apps & Credentials → Create App → Client ID",
      "url": "https://developer.paypal.com/dashboard/applications"
    },
    "PAYPAL_CLIENT_SECRET": {
      "source": "PayPal Developer",
      "path": "Dashboard → My Apps & Credentials → Create App → Secret",
      "url": "https://developer.paypal.com/dashboard/applications"
    }
  },
  "email": {
    "RESEND_API_KEY": {
      "source": "Resend",
      "path": "API Keys → Create API Key",
      "url": "https://resend.com/dashboard/api-keys"
    },
    "EMAIL_FROM": {
      "source": "Your domain DNS + email provider",
      "notes": "Use a verified domain (SPF/DKIM set). Example: \"GoldShore <no-reply@goldshore.org>\""
    }
  },
  "auth": {
    "GOOGLE_CLIENT_ID": {
      "source": "Google Cloud Console",
      "path": "APIs & Services → Credentials → Create Credentials → OAuth Client ID",
      "url": "https://console.cloud.google.com/apis/credentials",
      "notes": "Web application type; add Authorized redirect URI."
    },
    "GOOGLE_CLIENT_SECRET": {
      "source": "Google Cloud Console",
      "path": "OAuth client → Download JSON or copy Secret"
    },
    "GITHUB_CLIENT_ID": {
      "source": "GitHub Developer Settings",
      "path": "Settings → Developer settings → OAuth Apps → New OAuth App → Client ID",
      "url": "https://github.com/settings/developers"
    },
    "GITHUB_CLIENT_SECRET": {
      "source": "GitHub Developer Settings",
      "path": "OAuth App → Generate a new client secret"
    },
    "OAUTH_REDIRECT_URI": {
      "source": "Your app routing",
      "examples": [
        "https://admin.goldshore.org/auth/callback"
      ],
      "notes": "Must exactly match provider console configuration."
    }
  },
  "turnstile": {
    "PUBLIC_TURNSTILE_SITE_KEY": {
      "source": "Cloudflare Turnstile",
      "path": "Turnstile → Create sitekey",
      "url": "https://dash.cloudflare.com/?to=/:account/turnstile"
    },
    "TURNSTILE_SECRET_KEY": {
      "source": "Cloudflare Turnstile",
      "path": "Turnstile → Site → Secret key"
    }
  }
}
