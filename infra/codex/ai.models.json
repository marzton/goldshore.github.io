{
  "default_policy": "balanced_v1",
  "providers": {
    "openai": {
      "base_url": "https://api.openai.com/v1",
      "models": {
        "gpt-4.1": { "capabilities": ["reason", "tool", "vision"], "cost": 3.0, "speed": "medium" },
        "gpt-4o-mini": { "capabilities": ["chat", "tool"], "cost": 0.6, "speed": "fast" }
      },
      "env": { "api_key": "OPENAI_API_KEY" }
    },
    "anthropic": {
      "base_url": "https://api.anthropic.com",
      "models": {
        "claude-3-5-sonnet": { "capabilities": ["reason", "tool"], "cost": 2.4, "speed": "fast" }
      },
      "env": { "api_key": "ANTHROPIC_API_KEY" }
    },
    "google": {
      "base_url": "https://generativelanguage.googleapis.com",
      "models": {
        "gemini-1.5-pro": { "capabilities": ["reason", "tool", "vision"], "cost": 2.0, "speed": "fast" }
      },
      "env": { "api_key": "GOOGLE_GEMINI_API_KEY" }
    },
    "groq": {
      "base_url": "https://api.groq.com/openai/v1",
      "models": {
        "llama-3.1-70b": { "capabilities": ["chat", "tool"], "cost": 0.2, "speed": "very_fast" }
      },
      "env": { "api_key": "GROQ_API_KEY" }
    },
    "local": {
      "base_url": "http://ollama.internal:11434",
      "models": {
        "llama3.1:8b": { "capabilities": ["chat"], "cost": 0.05, "speed": "fast" }
      }
    }
  },
  "policies": {
    "balanced_v1": [
      { "when": { "task": ["general", "qa"] }, "route": "openai:gpt-4o-mini" },
      { "when": { "task": ["analysis", "plan"], "max_cost": 2.5 }, "route": "anthropic:claude-3-5-sonnet" },
      { "when": { "task": ["draft", "summarize"], "latency": "low" }, "route": "groq:llama-3.1-70b" },
      { "fallback": "openai:gpt-4.1" }
    ],
    "cheap_fast": [
      { "when": { "task": ["summarize", "rewrite"] }, "route": "groq:llama-3.1-70b" },
      { "fallback": "openai:gpt-4o-mini" }
    ]
  }
}
