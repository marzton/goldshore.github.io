{
  "name": "goldshore",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:web": "npm --workspace apps/web run build",
    "build:site": "astro build",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev --parallel",
    "dev:site": "astro dev",
    "dev:api": "wrangler dev --config apps/api-worker/wrangler.toml",
    "build:api": "wrangler build --config apps/api-worker/wrangler.toml",
    "deploy:api": "wrangler deploy --config apps/api-worker/wrangler.toml",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "preview:site": "astro preview",
    "process:images": "node apps/web/scripts/process-images.mjs",
    "start:site": "astro dev",
    "enforce:dns": "bash infra/scripts/enforce-dns.sh",
    "agent:poll": "tsx infra/cron/agent_poll.ts",
    "agent:dryrun": "DRY_RUN=1 tsx infra/cron/agent_poll.ts",
    "validate:codex-config": "tsx infra/limits/validate_codex_config.ts"
  },
  "dependencies": {
    "chart.js": "^4.4.4",
    "hono": "^4.10.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.6.0"
  },
  "overrides": {
    "@astrojs/cloudflare": "^12.6.10"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/react": "^4.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@tailwindcss/typography": "^0.5.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "astro": "^5.15.3",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.11.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "lighthouse": "^12.0.0",
    "octokit": "^4.0.2",
    "sharp": "^0.33.4",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.8.1",
    "turbo": "^2.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "wrangler": "^4.45.3"
  }
}
