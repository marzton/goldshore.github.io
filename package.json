{
  "name": "goldshore",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:web": "npm --workspace apps/web run build",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "process:images": "node apps/web/scripts/process-images.mjs",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@cloudflare/workers-types": "^4.20241022.0",
    "astro": "^4.15.0",
    "eslint": "^9.11.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "lighthouse": "^12.0.0",
    "sharp": "^0.33.4",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "tslib": "^2.8.1",
    "turbo": "^2.1.1",
    "typescript": "^5.6.2",
    "wrangler": "^3.82.0"
  }
}
