{
  "name": "goldshore",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "deploy": "turbo run deploy",
    "dev:api": "wrangler dev --config apps/goldshore-api/wrangler.toml",
    "build:api": "wrangler build --config apps/goldshore-api/wrangler.toml",
    "deploy:api": "wrangler deploy --config apps/goldshore-api/wrangler.toml"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.47.0"
  }
}
