{
  "name": "@goldshore/api-worker",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "wrangler dev --config wrangler.toml",
    "deploy": "wrangler deploy --config wrangler.toml",
    "test": "vitest run",
    "gen:openapi": "ts-node --esm src/openapi.ts",
    "ci": "npm run gen:openapi && npm test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^1.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "hono": "^4.10.6",
    "zod": "^4.1.12"
  }
}
