---
import "@goldshore/theme/tokens.css";
import "@goldshore/theme/src/theme.css";
import logoUrl from "@goldshore/assets/logo-wordmark-on-light.svg?url";

const navItems = [
  { label: "Overview", description: "Key metrics", href: "/" },
  { label: "Customers", description: "Acquisition & health", href: "/customers" },
  { label: "Subscriptions", description: "Plans & lifecycle", href: "/subscriptions" },
  { label: "Orders", description: "Trade execution", href: "/orders" },
  { label: "Risk", description: "Limits & controls", href: "/risk" },
  { label: "Reports", description: "Exports & archives", href: "/reports" },
  { label: "Settings", description: "Access & automation", href: "/settings" },
];
---
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GoldShore Admin Console</title>
    <style>
      :global(body) {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background: var(--bg);
        color: var(--text);
      }
      .app-shell {
        display: grid;
        grid-template-columns: 18rem 1fr;
        min-height: 100vh;
        background: linear-gradient(160deg, rgba(15,18,28,0.94), rgba(9,11,18,0.96)),
          radial-gradient(120% 120% at 10% 10%, rgba(227,179,65,0.08), transparent 60%);
      }
      .sidebar {
        backdrop-filter: blur(18px);
        border-right: 1px solid rgba(255,255,255,0.06);
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
      .nav-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .nav-item {
        display: grid;
        gap: 0.15rem;
      }
      .nav-link {
        color: rgba(233,236,244,0.88);
        text-decoration: none;
        font-weight: 600;
        letter-spacing: 0.01em;
        transition: color var(--dur) var(--ease);
      }
      .nav-meta {
        color: rgba(233,236,244,0.55);
        font-size: 0.8rem;
      }
      .nav-link:hover,
      .nav-link:focus {
        color: var(--brand);
      }
      .main {
        display: flex;
        flex-direction: column;
        position: relative;
      }
      .top-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.75rem 2rem 1.25rem;
        border-bottom: 1px solid rgba(255,255,255,0.06);
        background: rgba(12,14,22,0.75);
        backdrop-filter: blur(14px);
      }
      .top-bar__title {
        font-size: 1.25rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: rgba(233,236,244,0.92);
      }
      .pill {
        background: rgba(227,179,65,0.12);
        border: 1px solid rgba(227,179,65,0.45);
        border-radius: 999px;
        padding: 0.25rem 0.75rem;
        font-size: 0.8rem;
        color: var(--brand);
        letter-spacing: 0.04em;
      }
      .user-chip {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: rgba(26,30,45,0.85);
        border-radius: 999px;
        padding: 0.35rem 0.85rem;
        border: 1px solid rgba(255,255,255,0.08);
        color: rgba(233,236,244,0.82);
      }
      .main-content {
        padding: 2rem 2.5rem 3rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
      }
      @media (max-width: 960px) {
        .app-shell {
          grid-template-columns: 100%;
        }
        .sidebar {
          position: sticky;
          top: 0;
          flex-direction: row;
          overflow-x: auto;
          gap: 1.25rem;
        }
        .nav-list {
          flex-direction: row;
          gap: 1.5rem;
        }
        .nav-meta {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <div class="app-shell">
      <aside class="sidebar" aria-label="Primary">
        <a href="/" aria-label="GoldShore admin home">
          <img src={logoUrl} height="28" alt="GoldShore" />
        </a>
        <nav>
          <ul class="nav-list">
            {navItems.map(item => (
              <li class="nav-item">
                <a class="nav-link" href={item.href}>{item.label}</a>
                <span class="nav-meta">{item.description}</span>
              </li>
            ))}
          </ul>
        </nav>
      </aside>
      <div class="main">
        <header class="top-bar">
          <div class="top-bar__title">
            <span>Admin Command Deck</span>
            <span class="pill">Live</span>
          </div>
          <div class="user-chip">
            <span style="width: 10px; height: 10px; background: #34d399; border-radius: 999px;"></span>
            <span>ops@goldshore.org</span>
          </div>
        </header>
        <main class="main-content">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
