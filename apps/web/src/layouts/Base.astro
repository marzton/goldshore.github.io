---
import Header from "../components/Header.astro";
import "../styles/theme.css";

interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  noIndex?: boolean;
}

const { title, description, canonical, ogImage, noIndex = false } = Astro.props as Props;
const siteName = "Gold Shore";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
  </head>
  <body>
    <a class="skip-link" href="#content">Skip to content</a>
    <Header />
    <main id="content" class="container" style="padding-top: clamp(24px, 6vw, 56px);">
      <slot />
    </main>
    <footer class="container" role="contentinfo">
      <div class="grid" style="gap: 8px;">
        <small>© {new Date().getFullYear()} Gold Shore. All rights reserved.</small>
        <small>
          <a href="/privacy">Privacy</a> · <a href="/terms">Terms</a> · <a href="/admin">Admin</a>
        </small>
      </div>
    </footer>
  </body>
</html>
