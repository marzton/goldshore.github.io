---
import "../styles/theme.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Gold Shore — Shaping Waves</title>
    <meta
      name="description"
      content="Gold Shore builds market tools and narrative strategy — moving markets while protecting reputation."
    />
    <link rel="canonical" href="https://goldshore.org/" />
  </head>
  <body>
    <Header />
    <Hero>
      <h1 class="glow">Shaping waves that move markets — and reputations.</h1>
      <p>Glass-and-light aesthetics with depth: responsive, fast, and calm.</p>
      <div class="cta">
        <a class="btn" href="/services">Explore Services</a>
        <a class="btn ghost" href="/contact">Work With Us</a>
      </div>
    </Hero>
  </body>
</html>
