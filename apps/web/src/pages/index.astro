---
import "../styles/theme.css";

const hero = {
  title: "Tools for real traders.",
  subtitle: "We build market tools that respect capital and context.",
  cta: { text: "Explore the suite", href: "/products" }
} as const;

const year = new Date().getFullYear();
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/styles/theme.css" />
    <title>GoldShore</title>
  </head>
  <body>
    <header class="container grid grid-2">
      <div>
        <h1>{hero.title}</h1>
        <p style="color:var(--muted)">{hero.subtitle}</p>
        <a class="btn" href={hero.cta.href}>{hero.cta.text}</a>
      </div>
      <div class="card">Charts/CTA image slot</div>
    </header>

    <main class="container grid grid-2">
      <section class="card">
        <h2>Blog</h2>
        <p>Insights, research, and release notes.</p>
        <a href="/blog">Read the blog →</a>
      </section>
      <section class="card">
        <h2>Store</h2>
        <p>Pro tools and add-ons.</p>
        <a href="/store">Go to store →</a>
      </section>
    </main>

    <footer class="container" style="opacity:.7;margin-top:40px">
      <small>© {year} GoldShore</small>
    </footer>
  </body>
</html>
