---
import "./Header.css";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/team", label: "Team" },
  { href: "/services", label: "Services" },
  { href: "/contact", label: "Contact" },
];
const headerScript = await import("../scripts/headerMenu.ts?url");
---

<header class="container header" role="banner">
  <a class="brand" href="/" aria-label="Gold Shore home">
    <img src="/logo.svg" alt="" role="presentation" />
    <span class="title">GOLD&nbsp;SHORE</span>
  </a>
  <nav class="nav" aria-label="Primary">
    {navLinks.map(({ href, label }) => (
      <a href={href}>{label}</a>
    ))}
  </nav>
  <button
    class="hamburger"
    type="button"
    aria-label="Open navigation menu"
    aria-expanded="false"
    aria-controls="mobile-primary-navigation"
    data-menu-toggle
  >
    <span></span>
    <span></span>
    <span></span>
  </button>
  <div
    class="mobile-menu"
    id="mobile-primary-navigation"
    data-mobile-menu
    hidden
    aria-hidden="true"
  >
    <nav aria-label="Mobile primary">
      {navLinks.map(({ href, label }) => (
        <a href={href}>{label}</a>
      ))}
    </nav>
  </div>
</header>
<script type="module" src={headerScript.default}></script>

<script type="module" src={Astro.resolve("./header-menu.ts")}></script>
